{
	"name": "find-font",
	"type": "module",
	"version": "1.0.0",
	"description": "Detect fonts supported by the system on the client.",
	"author": "CondorHero",
	"license": "MIT",
	"homepage": "https://github.com/condorheroblog/find-font#readme",
	"repository": {
		"type": "git",
		"url": "git+https://github.com/condorheroblog/find-font.git"
	},
	"bugs": {
		"url": "https://github.com/condorheroblog/find-font/issues"
	},
	"keywords": [
		"find-font",
		"font-detect",
		"detect-font"
	],
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		}
	},
	"main": "dist/index.js",
	"module": "dist/index.mjs",
	"types": "dist/index.d.ts",
	"typesVersions": {
		"*": {
			"*": [
				"./dist/*",
				"./dist/index.d.ts"
			]
		}
	},
	"files": [
		"dist"
	],
	"scripts": {
		"postinstall": "simple-git-hooks",
		"prepublishOnly": "nr build",
		"lint": "eslint .",
		"lint:fix": "eslint . --fix",
		"dev": "esno ./src/index.ts",
		"coverage": "vitest run --coverage",
		"test": "vitest",
		"build": "tsup",
		"build:watch": "tsup --watch",
		"typecheck": "tsc --noEmit",
		"release": "bumpp package.json packages/*/package.json --commit --push --tag && npm publish"
	},
	"publishConfig": {
		"access": "public",
		"registry": "https://registry.npmjs.org"
	},
	"devDependencies": {
		"@antfu/eslint-config-ts": "^0.26.3",
		"bumpp": "^8.2.1",
		"canvas": "^2.10.1",
		"eslint": "^8.23.0",
		"esno": "^0.16.3",
		"jsdom": "^20.0.0",
		"lint-staged": "^13.0.3",
		"simple-git-hooks": "^2.8.0",
		"tsup": "^6.2.3",
		"typescript": "^4.8.3",
		"vitest": "^0.23.1"
	},
	"simple-git-hooks": {
		"pre-commit": "npx lint-staged",
		"preserveUnused": [
			"commit-msg"
		]
	},
	"lint-staged": {
		"*.{json,js,jsx,mjs,cjs,ts,tsx,md}": [
			"eslint --fix"
		]
	}
}
